<div id="rateus-modal" class="rateus-modal">
    <div class="rateus-container">
        <span class="close" onclick="closeRateUs()">&times;</span>
        <h1>Rate Us</h1>
        <p>We would love to hear your feedback!</p>
        <div class="rating-slider">
            <input type="range" name="rating" id="rating" min="1" max="5" step="1" value="3" oninput="updateSliderValue(this.value)">
            <span id="slider-value">3</span>
        </div>
        <textarea name="feedback" id="feedback" cols="30" rows="5" placeholder="Tell us more about your experience"></textarea>
        <button class="submit-button" onclick="submitFeedback(event)">Submit</button>
        <p id="feedback-message" style="display: none;"></p><!-- Message container -->
    </div>
</div>
